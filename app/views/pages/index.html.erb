<% content_for :body_class, "d-flex align-items-center bg-auth border-top border-top-4 border-dark landing" %>

<% if current_user %>
  <div class="container">
    <div class="row align-items-center">
      <div class="col-12 order-xl-1 order-1 my-5">
        <div class="text-center">
          <h1 class="display-4 mb-3">
            You're all set!
          </h1>

          <h5>
            Check your Spotify account for the "My Archive" playlist & wait for weekly updates!
          </h5>

          <p class="text-muted mb-4">
            <img src="https://i.pinimg.com/originals/47/4b/b5/474bb51f05a33360d70f18cbde9fd18c.gif" alt="Ron Swanson Dancing">
          </p>

          <%= link_to "Delete Account".html_safe, destroy_path, class: 'btn btn-lg btn-danger mb-5 font-weight-bolder', style: 'font-size:1.5em;' %>
        </div>

      </div>
    </div>
  </div>
<% else %>
  <div class="container">
    <div class="row align-items-center">
      <div class="col-12 order-xl-1 order-1 my-5">
        <div class="text-center">
          <h1 class="display-4 mb-3">
            Archive Discover Weekly & Release Radar playlists!
          </h1>

          <p class="text-muted mb-4">
            This tool creates a playlist called <i>"My Archive"</i> for you and archives the tracks from Discover Weekly & Release Radar playlists created by Spotify every week, so you don't have to!
          </p>

          <%= link_to "<i class='fab fa-spotify'></i> Sign in with Spotify".html_safe, omniauth_authorize_path('user', 'spotify'), method: :post, class: 'btn btn-lg btn-success mb-5 font-weight-bolder', style: 'font-size:1.5em;' %>
        </div>

      </div>
    </div>
  </div>
<% end %>